<% layout('layouts/main') %>

<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card shadow-sm border-0 my-4">
      <div class="card-body">
        <h2 class="card-title text-primary fw-bold mb-3">
          <%= helpers.toUpperCase(post.title) %>
        </h2>

        <div class="d-flex align-items-center mb-4">
          <img src="<%= post.authorImg %>" class="rounded-circle me-3 border" width="60" height="60" alt="Author">
          <div>
            <h6 class="mb-0"><%= post.author %></h6>
            <small class="text-muted">Published on <%= helpers.formatDate(post.createdAt) %></small>
          </div>
        </div>

        <p class="card-text fs-6 lh-base">
          <%= helpers.truncate(post.content, 300) %>
        </p>

        <div class="mt-3">
          <% post.tags.forEach(tag => { %>
            <span class="badge bg-dark me-1 mb-1"><%= tag %></span>
          <% }) %>
        </div>
      </div>
    </div>

    <!-- âœ… Bootstrap working check -->
    <div class="alert alert-success d-flex align-items-center" role="alert">
      <i class="bi bi-check-circle-fill me-2"></i>
      Bootstrap is working perfectly!
    </div>
  </div>
</div>
